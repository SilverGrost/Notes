<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LandLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Фрагмент со списком заметок -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_list_note_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:name="ru.geekbrains.notes.domain.ui.list.ListNotesFragment"
        app:layout_constraintBottom_toTopOf="@id/buttonAddNote"
        app:layout_constraintEnd_toStartOf="@id/fragment_item_note_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_list_notes"/>

    <!-- Здесь будет выбранная заметка -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_item_note_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonAddNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_list_note_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_view_note"/>

    <Button
        android:id="@+id/buttonAddNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_list_note_container" />

</androidx.constraintlayout.widget.ConstraintLayout>